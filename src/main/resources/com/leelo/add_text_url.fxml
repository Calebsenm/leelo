<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="page-container"
            stylesheets="@css/main.css"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.leelo.controller.addUrlController">

    <center>
        <VBox alignment="CENTER" spacing="12" styleClass="card max-content-width padding-lg"
              prefWidth="450" maxWidth="450">
            <children>
                <Label styleClass="title-lg" text="Agregar URL" />

                <VBox spacing="8" styleClass="section">
                    <children>
                        <Label styleClass="form-label" text="Título *" />
                        <TextField fx:id="titleField" promptText="Título descriptivo" styleClass="form-input" />
                    </children>
                </VBox>

                <VBox spacing="8" styleClass="section">
                    <children>
                        <Label styleClass="form-label" text="URL *" />
                        <TextField fx:id="urlField" promptText="https://ejemplo.com" styleClass="form-input" />
                    </children>
                </VBox>

                <Button fx:id="saveButton" prefWidth="140" styleClass="btn" text="Guardar" />
            </children>
        </VBox>
    </center>
</BorderPane>
